<!--- Start Container ---><div class="container">
<div>
  <h1>お問い合わせ</h1>
</div>
  
<%= form_for @inquiry, url: {action: 'thanks'} do |f| %>
  <table>
    <tr><th>会社名</th></tr>
    <tr>
      <td>
        <%= f.hidden_field :company_name %> <!-- データ保持 -->
        <%= @inquiry.company_name %>
      </td>
    </tr>
  
    <tr><th>お名前</th></tr>
    <tr>
      <td>  
        <%= f.hidden_field :name %> <!-- データ保持 -->
        <%= @inquiry.name %>
      </td>
    </tr>
      
    <tr><th>メールアドレス</th></tr>
    <tr>
      <td>
        <%= f.hidden_field :email %> <!-- データ保持 -->
        <%= @inquiry.email %>
      </td>
    </tr>

    <tr><th>電話番号</th></tr>
    <tr>
      <td>
        <%= f.hidden_field :phone %> <!-- データ保持 -->
        <%= @inquiry.phone %>
      </td>
    </tr>

    <tr><th>問合せ内容</th></tr>
    <tr>
      <td>
        <%= f.hidden_field :content %> <!-- データ保持 -->
        <%= simple_format(@inquiry.content) %>
      </td>
    </tr>
  </table>
    
  <div class="actions">
    <%= f.submit '戻る', name: 'back' %> <!-- 戻る為のname -->
    <%= f.submit '送信' %>
  </div>
<% end %>

<!--- //END Container ---></div>